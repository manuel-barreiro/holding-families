{
  "tailwindCSS.experimental.classRegex": [
    "clsx\\([^)]*['\"](.*?)['\"]"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.standard": "explicit",
    // Add a timeout to prevent long-running actions
    "source.fixAll.eslint.silent": "always",
    "source.timeout": "explicit"
  },
  // Disable automatic formatting for specific file types if needed
  "editor.formatOnSave": true,
  "[typescript][typescriptreact]": {
    // Choose one formatter, not multiple
    "editor.defaultFormatter": "standard.vscode-standard"
  },
  "standard.autoFixOnSave": true,
  "standard.engine": "ts-standard",
  "standard.usePackageJson": true,
  "editor.formatOnSaveMode": "file",
  "javascript.format.enable": false,
  "typescript.format.enable": false
}